{
    "compilerOptions": {
        "allowJs": true,
        "strict": true
    },
    "lint": {
        "rules": {
            "tags": ["recommended"]
        }
    },
    "fmt": {
        "options": {
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "start": "deno run --allow-net --allow-env index.ts",
        "dev": "deno run --allow-net --allow-env --watch index.ts"
    }
}
